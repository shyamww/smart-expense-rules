{
  "version": "2025-10-15",
  "sources": {
    "banks": {
      "AXISBK": "Axis Bank",
      "ICICIT": "ICICI Bank",
      "ICICIBK": "ICICI Bank",
      "SBIINB": "State Bank of India",
      "SBIUPI": "State Bank of India",
      "HDFCBK": "HDFC Bank",
      "KOTAKB": "Kotak Mahindra Bank",
      "YESBNK": "YES Bank",
      "IDFCFB": "IDFC FIRST Bank",
      "PNBMSG": "Punjab National Bank",
      "BARBNK": "Bank of Baroda",
      "BOIINB": "Bank of India",
      "UBIINB": "Union Bank of India",
      "RBLBNK": "RBL Bank"
    },
    "wallets": [
      "PHONEPE", "PAYTM", "AMAZON PAY", "AMAZONPAY",
      "GOOGLE PAY", "GPAY", "MOBIKWIK", "FREECHARGE", "BHIM"
    ],
    "card_brands": [
      "VISA", "MASTERCARD", "MAESTRO", "RUPAY",
      "AMEX", "AMERICAN EXPRESS"
    ]
  },

  "patterns": {
    "service_sender": "^(?:[A-Z]{2}-)?[A-Z0-9]{2,11}-S$",
    "bank_sender_allow": "(?i)(HDFCBK|ICICIBK|ICICIT|SBIINB|SBIUPI|AXISBK|KOTAKB|YESBNK|IDFCFB|PNBMSG|BARBNK|BOIINB|UBIINB|RBLBNK)",
    "wallet_sender_allow": "(?i)(PHONEPE|PAYTM|AMAZONPAY|AMAZON PAY|GPAY|GOOGLE PAY|MOBIKWIK|FREECHARGE|BHIM)",
    "amount": "(?i)(?:INR|Rs\\.?|₹)\\s*([0-9][\\d,]*(?:\\.\\d{1,2})?)(?!\\s*(?:lakh|lac|crore)s?\\b)",
    "debit_words": "(?i)\\b(debited|spent|withdrawn|purchase[d]?|paid|sent|transfer(?:red)?\\s+to|upi\\s*debit|p2m|p2a|spent using)\\b",
    "credit_words": "(?i)\\b(credited|received|refund(?:ed)?|reversal|cashback|payment\\s+received)\\b",
    "request_words": "(?i)\\b(has\\s+requested|payment\\s+request|collect\\s+request|requested\\s+money)\\b",
    "promo_words": "(?i)\\b(loan|apply|offer|pre[-\\s]?approved|preapproved|interest\\s*rate|emi|forex|markup|mark-?up|register|limited\\s+period)\\b",
    "masked_card": "(?i)\\b(?:Card|Credit\\s*Card|Corporate\\s*Card)\\s*(?:X+|XX+|\\*+)?\\d{2,4}\\b",
    "upi_mention": "(?i)\\bUPI\\b",
    "upi_vpa": "(?i)\\b([a-z0-9.\\-_]{2,})@([a-z]{2,})\\b",
    "date_numeric": "\\b(\\d{2})-(\\d{2})-(\\d{2,4}),?\\s+(\\d{2}):(\\d{2})(?::(\\d{2}))?\\b",
    "date_month": "\\b(\\d{2})-([A-Za-z]{3})-(\\d{2,4})\\s+(\\d{1,2}):(\\d{2})(?::(\\d{2}))?\\b"
  },

  "categories": {
    "food_delivery": ["ZOMATO", "SWIGGY", "DOMINOS", "MCDONALD", "ZEPTO", "BLINKIT", "BIGBASKET"],
    "ecommerce": ["AMAZON", "FLIPKART", "MYNTRA", "MEESHO", "NYKAA", "AJIO"],
    "travel": ["IRCTC", "INDIGO", "AIR INDIA", "VISTARA", "MAKEMYTRIP", "OLA", "UBER", "RAPIDO"],
    "entertainment": ["BOOKMYSHOW", "NETFLIX", "SPOTIFY"],
    "telecom_tv": ["AIRTEL", "JIO", "VI", "TATA PLAY", "HATHWAY"],
    "fuel": ["HPCL", "BPCL", "IOCL"],
    "billpay": ["BILLDESK"]
  },

  "rules": [
    {
      "id": "generic_upi_v1",
      "sender_pattern": "(?i)(ICICIBK|SBIUPI|HDFCBK|AXISBK|YESBNK|IDFCFB|PNBMSG).*\\-S$",
      "body_hints": ["UPI", "debited", "credited", "refunded", "paid", "received"],
      "extract": {
        "amount": "(?i)(?:INR|Rs\\.?|₹)\\s*([0-9][\\d,]*(?:\\.\\d{1,2})?)",
        "type": "(?i)\\b(debited|credited|refund(?:ed)?|cashback|requested)\\b",
        "date": [
          "\\b\\d{2}-[A-Za-z]{3}-\\d{2,4}\\s+\\d{1,2}:\\d{2}(?::\\d{2})?\\b",
          "\\b\\d{2}-\\d{2}-\\d{2,4}\\s+\\d{1,2}:\\d{2}(?::\\d{2})?\\b"
        ]
      },
      "category_hints": {
        "upi": ["UPI", "CRED", "PHONEPE", "GPAY", "GOOGLEPAY"]
      }
    },
    {
      "id": "credit_card_v1",
      "sender_pattern": "(?i)(ICICIBK|HDFCBK|AXISBK|SBIINB).*\\-S$",
      "body_hints": ["Credit Card", "spent", "purchase", "payment due"],
      "extract": {
        "amount": "(?i)(?:INR|Rs\\.?|₹)\\s*([0-9][\\d,]*(?:\\.\\d{1,2})?)",
        "type": "(?i)\\b(debited|spent|paid|withdrawn)\\b"
      },
      "category_hints": {
        "credit_card": ["Credit Card", "Card ending", "spent using"]
      }
    }
  ]
}
